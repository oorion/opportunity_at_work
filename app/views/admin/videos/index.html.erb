<h1>Upload a new video</h1>
<br>
<%= form_for(:video, url:admin_videos_path, html: { class: "form-horizontal"} ) do |f| %>
<div class="form-group">
  <%= f.label :title, "Title of Video", class:"col-sm-2 control-label" %>
  <%= f.text_field :title, placeholder: "ex: Whitehouse Tour", class: "col-sm-5" %>
</div>
  <br>
  <div class="form-group">
    <%= f.label :url, "YouTube Url Here -->", class: "col-sm-2 control-label" %>
    <%= f.text_field :url, placeholder: "ex: https://www.youtube.com/watch?v=Ap31wUxF_m8", class: "col-sm-5" %>
  </div>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary col-sm-2 col-sm-offset-5" %>
<% end %>

<div class="row">
  <table class="table table-condensed">
    <thead>
    <tr class="warning">
      <th data-field='Title'>Title</th>
      <th data-field='Url'>Url</th>
      <th data-field='Updated_at'>Last Updated</th>
      <th data-field="Delete">Edit/Delete</th>
    </tr>
    </thead>

    <tbody>
    <% @videos.each do |video| %>
      <tr id="table-row" data-title= "<%= video.id %>">
        <td><%= video.title %></td>
        <td><%= video.url %></td>
        <td><%= distance_of_time_in_words(video.updated_at, Time.now)%> ago</td>
        <td> <%= link_to "Delete", admin_pdf_path(video), method: :destroy, class: "btn btn-primary" %> </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
